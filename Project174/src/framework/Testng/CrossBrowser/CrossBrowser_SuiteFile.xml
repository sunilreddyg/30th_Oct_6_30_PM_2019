	<test name="test_chrome" verbose="2">
			<classes>
					<parameter name="browser_name" value="chrome"></parameter>
					<class name="framework.Testng.CrossBrowser.CrossBrowser_Test"></class>
			</classes>
	</test>
	
	<test name="test_firefox" verbose="2">
